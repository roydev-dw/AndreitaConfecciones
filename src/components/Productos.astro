---
import TarjetaProducto from "../components/TarjetaProducto.astro";
import { productos, type Producto } from "../data/productos";
---

<section id="productos" class="mx-auto mt-52 max-w-7xl px-4 py-16">
  <div>
    <h2 class="font-titulo mb-20 text-7xl font-bold uppercase">Productos</h2>
  </div>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {
      productos.map((producto: Producto) => (
        <TarjetaProducto
          titulo={producto.titulo}
          descripcion={producto.descripcion}
          imagen={producto.imagen}
        />
      ))
    }
  </div>

  <div class="mt-10 flex justify-center">
    <a
      href="https://api.whatsapp.com/send?phone=56968058495&text=Hola,%20me%20interesa%20tu%20producto!"
      class="bg-theme-rosa hover:text-theme-negro hover:bg-theme-indigo mt-3 mb-14 inline-block transform px-8 py-4 font-semibold text-white transition-all duration-300 ease-in-out hover:scale-110 md:text-lg lg:text-xl xl:text-2xl"
    >
      ¡Pincha y te lo envío!
    </a>
  </div>
</section>
