---
import TarjetaProducto from "../components/TarjetaProducto.astro";
import { productos, type Producto } from "../data/productos";
import BotonWhatsapp from "./BotonWhatsapp.astro";
---

<section
  id="productos"
  class="mx-auto mt-14 mb-52 max-w-5xl px-4 2xl:mt-52 2xl:max-w-7xl 2xl:scroll-mt-80"
>
  <div>
    <h2 class="font-titulo mb-14 text-3xl font-bold uppercase 2xl:text-7xl">
      Productos
    </h2>
  </div>

  <div class="grid grid-cols-3 gap-20 2xl:grid-cols-3">
    {
      productos.map((producto: Producto) => (
        <TarjetaProducto
          titulo={producto.titulo}
          descripcion={producto.descripcion}
          imagen={producto.imagen}
        />
      ))
    }
  </div>
</section>
