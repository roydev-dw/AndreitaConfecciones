---
import BotonWhatsapp from "./BotonWhatsapp.astro";
---

<section
  id="novedades"
  class="mx-auto mt-14 w-full max-w-4xl px-4 2xl:mt-52 2xl:max-w-7xl 2xl:scroll-mt-80"
>
  <div>
    <h2 class="font-titulo mb-14 text-3xl font-bold uppercase 2xl:text-7xl">
      Novedades
    </h2>
  </div>
  <div
    class="grid w-full grid-cols-1 gap-20 2xl:auto-rows-auto 2xl:grid-cols-3"
  >
    <div
      class="flex items-center justify-center bg-gray-700/20 transition-all duration-300 hover:scale-[1.03] 2xl:col-span-2 2xl:row-span-2"
    >
      <img
        src="/producto1-removebg-preview.png"
        class="aspect-square w-full p-4"
      />
    </div>
    <div
      class="flex items-center justify-center bg-gray-700/20 transition-all duration-300 hover:scale-[1.03]"
    >
      <img
        src="/producto2-removebg-preview.png"
        class="aspect-square w-full object-contain p-4"
      />
    </div>
    <div
      class="flex items-center justify-center bg-gray-700/20 transition-all duration-300 hover:scale-[1.03]"
    >
      <img
        src="/producto3-removebg-preview.png"
        class="aspect-square w-full object-contain p-4"
      />
    </div>
  </div>
  <div class="mt-10 flex justify-center">
    <BotonWhatsapp frase="¡Pincha aquí y Llevate el tuyo!" />
  </div>
</section>
