---
import BotonWhatsapp from "./BotonWhatsapp.astro";
---

<section
  id="novedades"
  class="mx-auto mt-14 w-full max-w-5xl px-4 2xl:mt-52 2xl:max-w-7xl 2xl:scroll-mt-80"
>
  <div>
    <h2 class="font-titulo mb-14 text-3xl font-bold uppercase 2xl:text-7xl">
      Novedades
    </h2>
  </div>
  <div
    class="grid w-full grid-cols-1 gap-2 md:auto-rows-auto md:grid-cols-3 md:gap-8 2xl:gap-20"
  >
    <div
      class="flex items-center justify-center rounded-xl bg-gray-700/20 transition-all duration-300 hover:scale-[1.03] lg:rounded-none"
    >
      <img
        src="/producto1-removebg-preview.png"
        class="aspect-[21/9] w-full object-contain p-4 md:aspect-square"
      />
    </div>
    <div
      class="flex items-center justify-center rounded-xl bg-gray-700/20 transition-all duration-300 hover:scale-[1.03] lg:rounded-none"
    >
      <img
        src="/producto2-removebg-preview.png"
        class="aspect-[21/9] w-full object-contain p-4 md:aspect-square"
      />
    </div>
    <div
      class="flex items-center justify-center rounded-xl bg-gray-700/20 transition-all duration-300 hover:scale-[1.03] lg:rounded-none"
    >
      <img
        src="/producto3-removebg-preview.png"
        class="aspect-[21/9] w-full object-contain p-4 md:aspect-square"
      />
    </div>
  </div>
  <div class="mt-10 flex justify-center">
    <BotonWhatsapp frase="¡Pincha aquí y Llevate el tuyo!" />
  </div>
</section>
